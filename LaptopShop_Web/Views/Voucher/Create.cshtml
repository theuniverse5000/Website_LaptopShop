@using Data.Models;
@model Data.Models.Voucher

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Voucher</h4>
<hr />

<form class="row g-3 was-validated" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating col-md-4">
        <input asp-for="Ma" type="text" class="form-control" placeholder="Ma" required>
        <label for="">Mã Voucher</label>
        <span asp-validation-for="Ma" class="text-danger"></span>
        <div class="valid-feedback">Valid.</div>
        <div class="invalid-feedback">Không được để trống</div>
    </div> <br>
    <div class="form-floating col-md-6">
        <input asp-for="Name" type="text" class="form-control" placeholder="Name" required>
        <label for="">Tên Voucher</label>
    </div>
    <div class="form-floating col-md-6">
        <input type="date" asp-for="StartDay" class="form-control" placeholder="StartDay" required />
        <label for="">Ngày Bắt Đầu</label>
        <span asp-validation-for="StartDay" class="text-danger"></span>
    </div>
    <div class="form-floating col-md-6">
        <input type="date" asp-for="EndDay" class="form-control" placeholder="EndDay" required />
        <label for="">Ngày Kết Thúc</label>
        <span asp-validation-for="EndDay" class="text-danger"></span>
    </div>
    <div class="form-floating col-md-6">
        <input asp-for="GiaTri" type="number" class="form-control" placeholder="GiaTri" required />
        <label for="">Giá Trị</label>
        <span asp-validation-for="GiaTri" class="text-danger"></span>
    </div>
    <div class="form-floating col-md-6">
        <input type="number" asp-for="SoLuong" class="form-control" placeholder="SoLuong" required />
        <label for="">Số Lượng</label>
        <span asp-validation-for="SoLuong" class="text-danger"></span>
    </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
