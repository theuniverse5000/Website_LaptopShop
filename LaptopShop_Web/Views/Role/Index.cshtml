@model IEnumerable<Data.Models.Role>
@using Data.Models;
@{
    ViewData["Title"] = "Index";
}

<h1>Quan ly Chuc vu</h1>
<a asp-controller="Role" asp-action="Creates" class="btn btn-outline-danger-primary">Them</a>
<div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%;"></div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Ten chuc vu</th>
            <th scope="col">trang thai</th>
            <th scope="col">mo ta</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in (List<Role>)ViewBag.listRole)
        {
            <tr class="table-primary">
                <td>@x.RoleName</td>
                <td>@x.Status</td>
                <td>@x.Description</td>
                <td>
                    <a asp-action="Updates" asp-route-id="@x.Id" class="btn btn-outline-success">Sửa</a>
                    <a asp-action="Deletes" asp-route-id="@x.Id" class="btn btn-outline-success">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
