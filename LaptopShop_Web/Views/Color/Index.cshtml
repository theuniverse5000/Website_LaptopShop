@model IEnumerable<Data.Models.Color>
@using Data.Models;
@{
    ViewData["Title"] = "Index";
}

<h1>Quan ly Mau sac</h1>
<a asp-controller="Color" asp-action="Creates" class="btn btn-outline-danger-primary">Them</a>
<div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%;"></div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">ma mau</th>
            <th scope="col">ten mau</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var x in (List<Color>)ViewBag.listColor)
        {
            <tr class="table-primary">
                <td>@x.Ma</td>
                <td>@x.Name</td>
                <td>
                    <a asp-action="Updates" asp-route-id="@x.Id" class="btn btn-outline-success">Sửa</a>
                    <a asp-action="Deletes" asp-route-id="@x.Id" class="btn btn-outline-success">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>