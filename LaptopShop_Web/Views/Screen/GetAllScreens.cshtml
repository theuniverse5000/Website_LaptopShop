<h1>Screen</h1>
<a asp-controller="Screen" asp-action="AddSc" class="btn btn-outline-danger-primary">Thêm</a>
<div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated" screen="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%;"></div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Mã</th>
            <th scope="col">Tên</th>
            <th scope="col">Kích cỡ</th>
            <th scope="col">Tần số</th>
            <th scope="col">Chất liệu</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr class="table-primary">
                <td>@x.Ma</td>
                <td>@x.Ten</td>
                <td>@x.KichCo</td>
                <td>@x.TanSo</td>
                <td>@x.ChatLieu</td>


                <td>
                    <a asp-action="Edits" asp-route-id="@x.Id" class="btn btn-outline-success">Sửa</a>
                    <a asp-action="Deletes" asp-route-id="@x.Id" class="btn btn-outline-success">Xóa</a>
                    <a asp-action="Details" asp-route-id="@x.Id" class="btn btn-outline-success">Chi tiết</a>

                </td>
            </tr>
        }
    </tbody>
</table>

